# StratTrust AI - 环境变量配置

# === API 配置 ===
# Next.js API 基础 URL
NEXT_PUBLIC_API_BASE_URL=http://localhost:3000/api

# === RPC 和链配置 ===
# 主链 RPC (Ethereum, Polygon, Arbitrum, Base 等)
NEXT_PUBLIC_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/your-key
NEXT_PUBLIC_CHAIN_ID=1

# 0G 链配置
0G_RPC_URL=https://evmrpc.0g.ai
0G_CHAIN_ID=16661

# === 私钥和签名 (保密！) ===
# 仅在服务器端使用，绝不提交到 Git
PRIVATE_KEY=your_private_key_here
EXECUTOR_ADDRESS=your_executor_address

# === 0G Storage 配置 ===
# 0G Storage 节点 URL
0G_STORAGE_URL=https://storage-node.0g.ai
0G_STORAGE_RPC=https://evmrpc.0g.ai

# === 0G Compute 配置 ===
# 用于 AI 推理的 0G Compute broker
0G_COMPUTE_BROKER_URL=https://compute-broker.0g.ai
0G_COMPUTE_API_KEY=your_compute_api_key

# === TEE 配置 ===
# TEE 签名服务 URL
TEE_SERVICE_URL=https://tee-service.0g.ai
TEE_ATTESTATION_PROVIDER=mock # 可选: intel-sgx, amd-sev, arm-cca, mock

# === AI 模型配置 ===
# OpenAI API 密钥 (用于情绪分析或补充推理)
OPENAI_API_KEY=sk-your-key
OPENAI_MODEL=gpt-3.5-turbo

# 本地模型路径
LOCAL_MODEL_PATH=/models/inference_model.onnx

# === 数据库配置 ===
# 审计日志和元数据数据库
DATABASE_URL=postgresql://user:password@localhost:5432/strattrust_ai
REDIS_URL=redis://localhost:6379

# === 智能合约 ===
# 执行合约地址
EXECUTION_CONTRACT_ADDRESS=0x...
EXECUTION_CONTRACT_ABI=[...]

# === 风控参数 ===
MAX_SLIPPAGE=0.05 # 5%
MAX_POSITION_SIZE=0.1 # 10%
MAX_DRAWDOWN=0.2 # 20%
MAX_DAILY_LOSS=0.05 # 5%

# === 运维配置 ===
# 日志级别
LOG_LEVEL=info

# 性能监控
ENABLE_METRICS=true
METRICS_PROVIDER=prometheus

# 特性开关
ENABLE_HONEYPOT_CHECK=true
ENABLE_ON_CHAIN_RECORDING=false
ENABLE_BATCH_OPTIMIZATION=true

# === Vercel 特定配置 ===
# 构建命令
VERCEL_ENV=production

# 允许的源 (CORS)
ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
